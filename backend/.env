# Application Settings
APP_NAME="Document Embedding Platform"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Upload Settings
UPLOAD_DIR="/tmp/uploads"
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Document Processing Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Configuration File Path
CONFIG_FILE_PATH="config/app_config.json"

# OpenAI Configuration (if using OpenAI embedder)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_ORGANIZATION=your_org_id

# Pinecone Configuration (if using Pinecone vector DB)
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_ENVIRONMENT=us-east1-gcp
# PINECONE_INDEX_NAME=documents

# Qdrant Configuration (if using Qdrant vector DB)
# QDRANT_HOST=localhost
# QDRANT_PORT=6333
# QDRANT_API_KEY=your_qdrant_api_key 